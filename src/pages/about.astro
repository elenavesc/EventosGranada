---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-gray-800">
      About Us
    </h2>
    <p class="mt-4 text-center text-gray-600">
      At Eventos Granada, we specialize in creating personalized events that capture the essence of your vision. From weddings to corporate gatherings, our experienced team ensures every detail is perfect.
    </p>
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <div class="h-48 bg-gray-300 rounded-lg"></div>
        <!-- Replace this div with an actual image -->
        <p class="mt-4 text-gray-600">
          Our mission is to deliver unforgettable experiences for every occasion.
        </p>
      </div>
      <div>
        <div class="h-48 bg-gray-300 rounded-lg"></div>
        <!-- Replace this div with an actual image -->
        <p class="mt-4 text-gray-600">
          Trusted by local businesses and families across Granada, we take pride in our attention to detail and creativity.
        </p>
      </div>
    </div>
  </div>
</section>

</BaseLayout>
